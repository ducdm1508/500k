<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="com.cyber.server.controller.ComputerController">
    <center>
        <VBox style="-fx-padding: 20px;">
            <HBox style="-fx-padding: 0px 0px 5px 0px;">
                <Button fx:id="addButton" prefHeight="40.0" prefWidth="54.0" onAction="#openNewWindowAddComputer">
                    <graphic>
                        <FontAwesomeIconView glyphName="PLUS" size="20px"/>
                    </graphic>
                </Button>

                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="searchField" prefHeight="40.0" prefWidth="406.0" promptText="Search ..."/>

                <Button fx:id="searchButton" prefHeight="40.0" prefWidth="54.0">
                    <graphic>
                        <FontAwesomeIconView glyphName="SEARCH" size="20px"/>
                    </graphic>
                </Button>

            </HBox>
            <TableView fx:id="tableView" layoutX="14.0" layoutY="14.0" prefHeight="400.0" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name"/>
                    <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status"/>
                    <TableColumn fx:id="specificationsColumn" prefWidth="150.0" text="Specifications"/>
                    <TableColumn fx:id="ipAddressColumn" prefWidth="150.0" text="IP Address"/>
                    <TableColumn fx:id="roomColumn" prefWidth="100.0" text="Room"/>
                    <TableColumn fx:id="lastMaintenanceDateColumn" prefWidth="150.0" text="Last Maintenance"/>
                    <TableColumn fx:id="actionColumn" prefWidth="150.0" text="Action"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
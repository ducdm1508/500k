<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cyber.server.controller.SessionController">
    <center>
        <TableView fx:id="sessionTable" style="-fx-background-color: #f9f9f9; -fx-border-color: #d3d3d3; -fx-border-radius: 10; -fx-padding: 10;">
            <columns>
                <TableColumn fx:id="computerNameColumn" text="Computer Name" prefWidth="150.0"
                             style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="startTimeColumn" text="Start Time" prefWidth="150.0"
                             style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="endTimeColumn" text="End Time" prefWidth="100.0"
                             style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="totalTimeColumn" text="Total Time" prefWidth="150.0"
                             style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="sessionCostColumn" text="Session Cost" prefWidth="150.0"
                             style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>

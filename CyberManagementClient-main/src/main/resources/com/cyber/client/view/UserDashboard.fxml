<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="650.0" prefWidth="350.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.cyber.client.controller.UserDashboardController">
    <top>
        <AnchorPane prefHeight="120.0" prefWidth="350.0"
                    style="-fx-background-color: linear-gradient(to right, #2196F3, #03A9F4); -fx-padding: 15; -fx-border-radius: 10;">
            <children>
                <Label layoutX="30.0" layoutY="15.0"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Tên:"/>
                <Label fx:id="lblName" layoutX="110.0" layoutY="15.0" style="-fx-font-size: 18px; -fx-text-fill: white;" />
                <Label layoutX="30.0" layoutY="45.0"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Sử dụng:"/>
                <Text fx:id="txtUsage" layoutX="110.0" layoutY="64.0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <Label layoutX="30.0" layoutY="75.0"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Còn lại:"/>
                <Text fx:id="txtRemaining" layoutX="110.0" layoutY="94.0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <ProgressBar fx:id="progressBar" layoutX="30.0" layoutY="126.0" prefWidth="290.0" progress="0.57"
                             style="-fx-accent: #FFC107;"/>
            </children>
        </AnchorPane>
    </top>

    <center>
        <GridPane alignment="CENTER" hgap="10" prefHeight="250.0" prefWidth="350.0"
                  style="-fx-padding: 15; -fx-background-color: #F5F5F5; -fx-border-radius: 10;" vgap="10">
            <children>
                <Button prefHeight="55.0" prefWidth="140.0"
                        style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;"
                        text="Dịch vụ" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Button prefHeight="55.0" prefWidth="140.0"
                        style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;"
                        text="Dịch vụ" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Button prefHeight="55.0" prefWidth="140.0"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;"
                        text="Dịch vụ" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Button prefHeight="55.0" prefWidth="140.0"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;"
                        text="Dịch vụ" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button prefHeight="55.0" prefWidth="140.0"
                        style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;"
                        text="Dịch vụ" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Button prefHeight="55.0" prefWidth="140.0"
                        style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;"
                        text="Dịch vụ" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
    </center>

    <bottom>
        <ImageView fitHeight="296.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER">
            <image>
                <Image url="@../assets/navi.jpg"/>
            </image>
        </ImageView>
    </bottom>
</BorderPane>